---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import PastelBackground from "../components/PastelBackground.astro";
import { ViewTransitions } from "astro:transitions";

import { SITE_TITLE, TRANSITION_API } from "../config";

const {
  title = SITE_TITLE,
  includeSidebar = true,
  sideBarActiveItemID,
  childPage = "default"
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="lofi">
  <head>
    <BaseHead title={title}/>
    {TRANSITION_API && <ViewTransitions />}
  </head>
  <body>
    <div class="bg-base-100 drawer lg:drawer-close">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content bg-base-100">
        <Header title={SITE_TITLE} />
        <div class="md:flex md:justify-center">
          <main class="p-6 pt-10 lg:max-w-[900px] max-w-[100vw]">
            <PastelBackground />
            <div class="relative z-10">
              <slot />
            </div>
          </main>
        </div>s
        {childPage === "default" && <Footer />}
      </div>
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
    </div>
  </body>
</html>
