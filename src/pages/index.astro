---
import BaseLayout from "../layouts/BaseLayout.astro";
import background_image from "../images/me_1.jpg";
import { Image } from "astro:assets";
import { positionAt } from "node_modules/astro/dist/core/errors";
import SideBarFooter from "../components/SideBarFooter.astro";
---

<BaseLayout sideBarActiveItemID="home" childPage="index">
